<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Player Header - top -->
    <LinearLayout
        android:id="@+id/song_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="4dp">
        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin5"
            android:layout_marginStart="@dimen/layout_margin5"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_arrow_back_black_48dp"  />
        <!-- Now playing  -->
        <TextView
            android:id="@+id/songs_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="@string/songs_list"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

    </LinearLayout>

    <!-- ListView -->
<ListView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/song_list_header"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_margin2"
    android:paddingLeft="@dimen/layout_margin2"
    android:paddingRight="@dimen/layout_margin2"
    android:paddingTop="@dimen/layout_margin2" />

</RelativeLayout>